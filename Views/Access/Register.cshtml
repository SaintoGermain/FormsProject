@model FormsProyect.ViewModels.UserViewModel;
@{
	Layout = null;
}
<html>
	<head>
		<title>Register</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	</head>
	<body>


		<div class="row mt-5 justify-content-lg-center">
			<div class="col-sm-4">
				<div class="card">
					<div class="card-header">
						Register
					</div>
					<div class="card-body">
						<form asp-controller="Access" asp-action="Register"method="post">
							<input class="form-control mb-3" type="text" placeholder="Full Name" required asp-for="_Name"/>
							<input class="form-control mb-3" type="text" placeholder="E-mail" required asp-for="Email" />
							<input class="form-control mb-3" type="password" placeholder="Password" required asp-for="PasswordHash" />
							<input class="form-control mb-3" type="password" placeholder="Confirm password" required asp-for="ConfirmPasswordHash" />
							<div class="d-grid gap-2 mb-3">
								<button class="btn btn-primary" type="submit">Register</button>
							</div>
							@if(ViewData["Message"]!= null){
								<div class="alert alert-danger" role="alert">
									@ViewData["Message"]
								</div>
							}
							Do you already have an account? <a asp-controller="Access" asp-action="Login">Login</a>
						</form>
					</div>
				</div>
			</div>
		</div>



	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>