@model FormsProyect.ViewModels.LoginViewModel;
@{
	Layout = null;
}

<html>
<head>
	<title>Login</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/logRegStyles.css" />
</head>
<body>
	<div class="images"></div>
	<div class ="welcome">
		<div class=" rightSide">
			<div class="col-sm-3 justify-content-center align-items-center">
				<div>
					<div class="row mt-9 justify-content-center align-items-center">
						<div class="welcomeText">
							<h1 class="titleWelcome">Welcome to MyForms!</h1>
							<p class="subWelcome">Please log in to access your account or register if you are new here.</p>
						</div>
					</div>
					<div class="card">
						<div class="card-header">
							Login
						</div>
						<div class="card-body">
							<form asp-controller="Access" asp-action="Login" method="post">
								<input class="form-control mb-3" type="text" placeholder="E-mail" required asp-for="Email" />
								<input class="form-control mb-3" type="password" placeholder="Password" required asp-for="PasswordHash" />
								<div class="d-grid gap-2 mb-3">
									<button class="btn btn-primary" type="submit">Login</button>
								</div>
								@if (ViewData["Message"] != null)
								{
									<div class="alert alert-danger" role="alert">
										@ViewData["Message"]
									</div>
								}
								Do you not have an account? <a asp-controller="Access" asp-action="Register">Register</a>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>